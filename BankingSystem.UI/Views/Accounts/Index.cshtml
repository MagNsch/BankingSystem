@using System.Security.Claims
@model IEnumerable<BankingSystem.API.Models.Account>

@{
    ViewData["Title"] = "Index";
    var userNameClaim = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value;
}

<h1>@userNameClaim's accounts</h1>

<p>
    <a asp-action="CreateAccount" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AccountType)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="DepositAmount" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-info">Deposit</a>
                    <a asp-action="WithdrawAmount" asp-route-id="@item.AccountId" class="btn btn-sm btn-outline-info">Withdraw</a>
                </td>
            </tr>
        }
    </tbody>
</table>
