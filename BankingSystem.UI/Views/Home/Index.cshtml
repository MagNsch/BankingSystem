@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
        }

        .hero-section {
            background: url('https://source.unsplash.com/1600x900/?finance,banking') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 100px 0;
            text-align: center;
            position: relative;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.4); /* Semi-transparent overlay */
                z-index: 1;
            }

            .hero-section .content {
                position: relative;
                z-index: 2;
            }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.25rem;
                margin-bottom: 30px;
            }

        .btn-primary-custom {
            background-color: #004085;
            border-color: #00376b;
            padding: 10px 20px;
            font-size: 1.125rem;
        }

            .btn-primary-custom:hover {
                background-color: #00376b;
                border-color: #002a5b;
            }

        .section {
            padding: 60px 0;
            background-color: #f8f9fa;
        }

            .section h2 {
                margin-bottom: 40px;
                font-size: 2.5rem;
                font-weight: 600;
            }

            .section .col-md-4 {
                margin-bottom: 30px;
            }

        .footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 20px 0;
        }

            .footer p {
                margin: 0;
            }
    </style>
</head>
<body>

    <div class="hero-section">
        <div class="content container">
            <h1 class="display-4">Welcome to Your Bank</h1>
            <p class="lead">Your trusted partner for all your financial needs. Explore our services and find out how we can help you achieve your financial goals.</p>
            <a href="#" class="btn btn-primary btn-primary-custom btn-lg">Get Started</a>
        </div>
    </div>

    <section class="section text-center">
        <div class="container">
            <h2>Our Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <h3>Personal Banking</h3>
                    <p>Manage your personal finances with our easy-to-use banking services.</p>
                </div>
                <div class="col-md-4">
                    <h3>Business Banking</h3>
                    <p>Grow your business with our comprehensive banking solutions.</p>
                </div>
                <div class="col-md-4">
                    <h3>Investment Services</h3>
                    <p>Invest wisely with our expert advice and resources.</p>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
